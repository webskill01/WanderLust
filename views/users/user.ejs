<% layout('/layouts/boilerplate') -%>
<div class="row mt-3">
    <div class="col-6 offset-3">
        <h2 class="col-8 offset-2">SignUp For WanderLust</h2>
        <form method="post" action="/signup" class="needs-validation mb-3 mt-3" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" id="username" class="form-control" required>
                <div class="invalid-feedback">Enter A Valid Username.</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" id="email" class="form-control" required>
                <div class="invalid-feedback">Enter A Valid Email.</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" id="password" class="form-control" required>
                <div class="invalid-feedback">Enter A Valid Password.</div>
            </div>
            <button class="btn btn-success sub-btn">Submit</button>
        </form>
    </div>
</div>