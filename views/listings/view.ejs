<% layout('/layouts/boilerplate') -%>
<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%- JSON.stringify(listing) %>;
</script>
<style>
  /* Responsive overrides */
  @media (max-width: 768px) {
    .offset-3, .offset-4, .offset-2 {
      margin-left: 0 !important;
    }

    .col-8, .col-6, .col-5 {
      width: 100% !important;
    }

    .view-img {
      width: 100%;
      height: auto;
      object-fit: cover;
    }

    .btns {
      flex-direction: column;
      gap: 0.5rem;
    }

    .starability-result {
      font-size: 0.85rem !important;
    }

    .card .card-body {
      padding: 1rem;
    }

    #map {
      width: 100%;
      height: 250px;
    }

    .review-form-wrapper {
      padding: 0 1rem;
    }
  }

  /* Always apply these */
  .listing-card img {
    max-width: 100%;
    border-radius: 0.5rem;
  }
  .buttons{
    width: 100px;
    margin-top: 2rem !important;
    margin: auto;
    margin-top: 1rem !important;
    flex-direction: row !important;
    justify-content: center;
  }

  .starability-result:before {
    font-size: 1rem !important;
  }
  .card-body {
    padding: 0.5rem !important;
}
  #map {
    width: 100%;
    height: 300px;
    border-radius: 0.5rem;
  }
  @media (min-width: 992px) {
  .listing-card {
    max-width: 800px;
    margin: auto;
  }

  .review-form-wrapper {
    max-width: 800px;
    margin: 2rem auto;
  }

  .btns {
    justify-content: center;
    max-width: 600px;
    margin: 1.5rem auto;
  }

  .card.review-card {
    max-width: 95%;
  }

  .starability-result {
    font-size: 1.1rem !important;
  }

  #map {
    max-width: 900px;
    margin: 2rem auto;
    height: 400px;
  }

  .card-img-top.view-img {
    height: 400px;
    object-fit: cover;
  }

  .card-body {
    font-size: 1.1rem;
  }
  
}

</style>

<!-- Title + Listing Card -->
<div class="row mt-3 justify-content-center text-center">
  <div class="col-12">
    <b><%= listing.title %></b>
  </div>

  <div class="card col-md-8 col-12 show-card listing-card mt-3">
    <img src="<%= listing.image.url %>" class="card-img-top view-img" alt="listing_image">
    <div class="card-body">
      <p class="card-text"><i>Owned By: <%= listing.owner.username %></i></p>
      <p class="card-text"><%= listing.description %></p>
      <p class="card-text">&#8377;<%= listing.price.toLocaleString('en-IN') %></p>
      <p class="card-text"><%= listing.location %></p>
      <p class="card-text"><%= listing.country %></p>
    </div>
  </div>
</div>

<!-- Edit/Delete Buttons -->
<% if (currUser && currUser._id.equals(listing.owner._id)) { %>
  <div class="btns d-flex gap-2 justify-content-space-around buttons">
    <a href="/listings/<%= listing._id %>/edit" class="btn sub-btn btn-dark flex-fill">Edit</a>
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="w-100">
      <button class="btn btn-dark w-100">Delete</button>
    </form>
  </div>
<% } %>

<!-- Leave a Review Form -->
<% if (currUser) { %>
  <hr>
  <div class="col-12 col-md-8 offset-md-2 review-form-wrapper mb-4">
    <h4>Leave a Review</h4>
    <form action="/listings/<%= listing._id %>/reviews" method="post" class="needs-validation" novalidate>
      <!-- Starability Rating -->
      <div class="mt-3">
        <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-growRotate">
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>

      <!-- Comment Input -->
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
        <div class="invalid-feedback">Please enter a comment to review.</div>
      </div>

      <button class="btn btn-outline-dark">Submit</button>
    </form>
  </div>
<% } %>

<% if (listing.reviews.length > 0) { %>
  <hr>
  <div class="container mt-4 mb-4">
    <h4 class="text-center mb-3">All Reviews</h4>
    <div class="row justify-content-space-around">
      <% for (review of listing.reviews) { %>
        <div class="col-12 col-md-6 d-flex justify-content-center mb-4">
          <div class="card review-card w-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title">@<%= review.author.username %></h5>
              <p class="card-text"><%= review.comment %></p>
              <p class="starability-result card-text mb-2" data-rating="<%= review.rating %>"></p>
              <% if (currUser && currUser._id.equals(review.author._id)) { %>
                <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                  <button class="btn btn-sm btn-dark">Delete</button>
                </form>
              <% } %>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
<% } %>

<!-- Map Section -->
<hr>
<div class="row mt-3">
  <div class="col-12">
    <h3>Where You'll Be</h3>
    <div id="map"></div>
  </div>
</div>

<script src="/js/map.js"></script>
