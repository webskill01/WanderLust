<% layout('/layouts/boilerplate') -%>
<style>
/* === FILTER BAR === */
#filters {
  display: flex;
  flex-wrap: wrap;
  gap: 1.5rem;
  align-items: center;
  justify-content: space-around;
}

.filter {
  margin-top: 1rem;
  text-align: center;
  opacity: 0.9;
  font-size: 0.85rem;
  transition: all 0.2s ease;
  width: 80px;
  color: #000;
  text-decoration: none;
}

.filter:hover {
  opacity: 1;
  transform: scale(1.05);
  cursor: pointer;
}

.filter i {
  font-size: 1.3rem;
  color: black;
}

.filter p {
  margin: 0.25rem 0 0;
  font-size: 0.75rem;
}

/* === TAX TOGGLE & PRICE === */
.taxPrice {
  display: none;
  font-size: 0.85rem;
  opacity: 0.7;
}

.tax-toggle {
  display: flex;
  align-items: center;
  padding: 0.4rem 0.75rem;
  border: 2px solid grey;
  border-radius: 0.75rem;
  font-size: 0.85rem;
  margin-left: 2rem;
  height: 3rem;
}

.tax-toggle label {
  font-size: 0.8rem;
}

/* === COLLAPSIBLE FILTER OVERLAY === */
#filter-bar-wrapper {
  position: relative;
  z-index: 10;
}

#filter-bar {
  position: relative;
  z-index: 20;
}

.filter-overlay {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  z-index: 15;
  background-color: white;
  border-radius: 0 0 1rem 1rem;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  transition: max-height 0.3s ease, opacity 0.3s ease;
  overflow: hidden;
}

/* === CARD & IMAGE === */
.card-link {
  color: inherit;
  text-decoration: none;
}

.card-link:hover {
  text-decoration: none;
}

.card-body p {
  font-size: .9rem;
}

/* Card image wrapper for consistent aspect ratio */
.listing-img-wrapper {
  aspect-ratio: 4 / 3;
  width: 100%;
  overflow: hidden;
  border-top-left-radius: 0.5rem;
  border-top-right-radius: 0.5rem;
}

.listing-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* === BUTTONS === */
.btn:hover {
  background-color: #ff385c;
}

/* === RESPONSIVE OVERRIDES === */
@media (max-width: 768px) {
  .filter {
    width: 70px;
    font-size: 0.8rem;
  }

  .filter i {
    font-size: 1.2rem;
  }
}

@media (max-width: 576px) {
  .card-body {
    padding: 0.75rem;
  }

  .card-body p,
  .card-text {
    font-size: 0.95rem;
  }

  .listing-img-wrapper {
    aspect-ratio: 16 / 10;
  }
}
</style>


    <!-- Sticky bar with toggle and tax switch -->
    <div class="position-relative z-3" id="filter-bar-wrapper">
        <div class="d-flex justify-content-between align-items-center px-2 mb-2" id="filter-bar">
            <button class="btn btn-outline-secondary btn-sm" type="button" data-bs-toggle="collapse"
                data-bs-target="#filtersCollapse" aria-expanded="false" aria-controls="filtersCollapse">
                <i class="fa-solid fa-sliders"></i> Filters
            </button>

            <div class="tax-toggle">
                <div class="form-check form-switch form-check-reverse mb-0">
                    <input class="form-check-input" type="checkbox" id="switchCheckReverse">
                    <label class="form-check-label" for="switchCheckReverse">Display After Taxes</label>
                </div>
            </div>
        </div>

        <!-- Collapsible filter panel -->
        <div class="collapse bg-white shadow px-3 py-3 rounded filter-overlay" id="filtersCollapse">
            <div id="filters" class="d-flex flex-wrap gap-3 ">
                <div class="filter"><i class="fa-solid fa-fire"></i>
                    <p>Trending</p>
                </div>
                <div class="filter"><i class="fa-solid fa-bed"></i>
                    <p>Rooms</p>
                </div>
                <div class="filter"><i class="fa-solid fa-mountain-city"></i>
                    <p>Iconic Cities</p>
                </div>
                <div class="filter"><i class="fa-solid fa-mountain"></i>
                    <p>Mountains</p>
                </div>
                <div class="filter"><i class="fa-brands fa-fort-awesome"></i>
                    <p>Castles</p>
                </div>
                <div class="filter"><i class="fa-solid fa-person-swimming"></i>
                    <p>Amazing Pools</p>
                </div>
                <div class="filter"><i class="fa-solid fa-campground"></i>
                    <p>Camping</p>
                </div>
                <div class="filter"><i class="fa-solid fa-cow"></i>
                    <p>Farms</p>
                </div>
                <div class="filter"><i class="fa-solid fa-snowflake"></i>
                    <p>Arctic</p>
                </div>
                <div class="filter"><i class="fa-solid fa-ship"></i>
                    <p>Boats</p>
                </div>
                <div class="filter"><i class="fa-solid fa-key"></i>
                    <p>New</p>
                </div>
            </div>
        </div>
    </div>



    <% if (searchQuery) { %>
        <p class="ms-3">Showing results for "<%= searchQuery %>"</p>
        <% } %>

            <div class="container-fluid">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 mb-5">
                    <% for (listing of listings) { %>
                        <div class="col">
                            <a href="/listings/<%= listing._id %>" class="card-link text-decoration-none">
                              <div class="card listing-card shadow-sm d-flex flex-column h-100">
                                <div class="listing-img-wrapper">
                                  <img src="<%= listing.image.url %>" class="listing-img" alt="Listing Image">
                                </div>
                                <div class="card-body flex-grow-1 d-flex align-items-center">
                                  <p class="card-text mb-0">
                                    <b><%= listing.title %></b><br>
                                    â‚¹<%= listing.price.toLocaleString('en-IN') %> / per night
                                    <i class="taxPrice"> &nbsp;&nbsp;+18% GST</i>
                                  </p>
                                </div>
                              </div>
                            </a>
                          </div>
                    <% } %>
                </div>                  
            </div>


            <script>
                document.getElementById("switchCheckReverse").addEventListener("click", () => {
                    const taxInfo = document.getElementsByClassName("taxPrice");
                    for (let info of taxInfo) {
                        info.style.display = info.style.display !== "inline" ? "inline" : "none";
                    }
                });
            </script>