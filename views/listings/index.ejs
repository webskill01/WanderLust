<% layout('/layouts/boilerplate') -%>
<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
        align-items: center;
    }
    .filter{
        margin-top:1rem;
        text-align: center;
        opacity: 0.7;
        text-decoration: none;
    }
    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }
    .filter a{
       color: #000000;
    }
    .filter>p {
        font-size: 0.8rem;
    }
    .taxPrice{
        display: none;
    }
    .tax-toggle{
        height: 3rem;
        display: flex;
        align-items: center;
        padding: 1rem;
        border: 2px solid grey;
        border-radius: 1rem;
        margin-left: 2rem;

    }
</style>
    <!-- <h3 class="  mb-3">Here are all the listings</h3> -->
    <div id="filters">
        <div class="filter">
          <a href="/"><i class="fa-solid fa-fire" ></i></a>
            <p>Trending</p>
        </div>
        <div class="filter">
          <a href="/"><i class="fa-solid fa-bed"></i></a>
            <p>Rooms</p>
        </div>
        <div class="filter">
          <a href="/"><i class="fa-solid fa-mountain-city"></i></a>
            <p>Iconic Cities</p>
        </div>
        <div class="filter">
          <a href="/"><i class="fa-solid fa-mountain"></i></i></a>
            <p>Mountains</p>
        </div>
        <div class="filter">
          <a href="/"><i class="fa-brands fa-fort-awesome"></i></a>
            <p>Castles</p>
        </div>
        <div class="filter">
          <a href="/"><i class="fa-solid fa-person-swimming"></i></a>
            <p>Amazing Pools</p>
        </div>
        <div class="filter">
          <a href="/"><i class="fa-solid fa-campground"></i></a>
            <p>Camping</p>
        </div>
        <div class="filter">
          <a href="/"><i class="fa-solid fa-cow"></i></a>
            <p>Farms</p>
        </div>
        <div class="filter">
          <a href="/"><i class="fa-solid fa-snowflake"></i></a>
            <p>Arctic</p>
        </div>
        <div class="filter">
          <a href="/"><i class="fa-solid fa-ship"></i></a>
            <p>Boats</p>
        </div>
        <div class="filter">
          <a href="/"><i class="fa-solid fa-key"></i></a>
            <p>New</p>
        </div>
        <div class="tax-toggle">
            <div class="form-check form-switch form-check-reverse">
                <input class="form-check-input" type="checkbox" id="switchCheckReverse">
                <label class="form-check-label" for="switchCheckReverse">Display Price After Taxes</label>
            </div>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">

        <% for(listing of listings ) { %>
            <a href="/listings/<%= listing._id %>" class="card-link">
            <div class="card col listing-card" >
                <div class="card-img-overlay"></div>
                <img src="<%= listing.image.url %>" class="card-img-top"style="height: 20rem; alt="Listing-Image">
                <div class="card-body">
                    <p class="card-text"> <b><%= listing.title %></b> <br> 
                        &#8377;<%= listing.price.toLocaleString('en-IN') %> / per night
                        <i class="taxPrice"> &nbsp; &nbsp; +18% GST </i>
                    </p>
                </div>
            </div>
        </a>
            <% } %>
        </div>

        <script>
            let switchTaxes = document.getElementById("switchCheckReverse")
            switchTaxes.addEventListener("click",()=>{
                let taxInfo = document.getElementsByClassName("taxPrice")
                for(info of taxInfo){
                    if(info.style.display != "inline"){
                        info.style.display = "inline"
                    }else{
                        info.style.display = "none"
                    }
                }
            })
        </script>