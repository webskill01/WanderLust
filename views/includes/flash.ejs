<style>
  /* Flash alert base styles */
.flash-alert {
  width: 100%;
  max-width: 600px;
  margin-top: 1rem;
  font-size: 0.95rem;
  opacity: 0;
  transform: translateY(-10px);
  animation: fadeSlideIn 0.5s ease forwards;
}

/* Smaller screen adjustments */
@media (max-width: 576px) {
  .flash-alert {
    font-size: 0.85rem;
    padding: 0.5rem 1rem;
  }

  .flash-alert .btn-close {
    top: 0.25rem;
    right: 0.5rem;
    scale: 0.9;
  }
}

/* Fade-in animation keyframes */
@keyframes fadeSlideIn {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
</style>

<% if (success && success.length) { %>
  <div class="alert alert-success alert-dismissible fade show flash-alert mx-auto" role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if (error && error.length) { %>
  <div class="alert alert-danger alert-dismissible fade show flash-alert mx-auto" role="alert">
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>
